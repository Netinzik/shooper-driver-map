{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "server.ts",
    "config/**/*",
    "controllers/**/*",
    "models/**/*",
    "routes/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}